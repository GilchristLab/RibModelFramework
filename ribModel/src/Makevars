ifeq ($(OS),Windows_NT)
	PKG_CPPFLAGS = -fopenmp -I../inst/include -DCPPTOML_USE_MAP
else
	UNAME_S := $(shell uname -s)
	ifeq ($(UNAME_S),Linux)
		## We need the headers exported via inst/include
		## Use openMP if in Linux
		PKG_CPPFLAGS = -fopenmp -I../inst/include/ -DCPPTOML_USE_MAP
	else
	ifeq ($OS,Windows_NT)
		PKG_CPPFLAGS = -fopenmp -I../inst/include -DCPPTOML_USE_MAP
	else
		## We need the headers exported via inst/include:
		PKG_CPPFLAGS = -I../inst/include/ -DCPPTOML_USE_MAP
	endif
	endif
endif

echo "flags = $(PKG_CPPFLAGS)"

## This is a C++11 package
CXX_STD = CXX11



